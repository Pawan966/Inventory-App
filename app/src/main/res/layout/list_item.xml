<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/ice_cream_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:minHeight="150dp"
        android:src="@drawable/ic_launcher_background" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:minHeight="150dp">

        <LinearLayout
            android:id="@+id/nameNprice"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ice_cream_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Vadilal"
                android:textSize="18sp"
                android:layout_marginLeft="16dp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="50"
                android:textSize="18sp"
                android:layout_marginLeft="16dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/quantityNsale"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_toEndOf="@id/nameNprice"
            android:orientation="vertical"
            android:layout_toRightOf="@id/nameNprice">

            <TextView
                android:id="@+id/quantity_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:text="In Stock"
                android:layout_marginRight="16dp" />

            <TextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:text="0"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginRight="16dp" />

            <Button
                android:id="@+id/sell_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:focusable="false"
                android:text="Sell"
                android:backgroundTint="#36FEFE"
                android:textColor="@color/black"
                android:layout_marginRight="8dp" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>